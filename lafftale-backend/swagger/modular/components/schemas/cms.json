{
  "News": {
    "type": "object",
    "description": "News article",
    "properties": {
      "id": {
        "type": "integer",
        "description": "Unique news ID"
      },
      "title": {
        "type": "string",
        "description": "News article title"
      },
      "content": {
        "type": "string",
        "description": "News article content"
      },
      "author_id": {
        "type": "integer",
        "description": "ID of author"
      },
      "category": {
        "type": "string",
        "description": "News category"
      },
      "featured": {
        "type": "boolean",
        "description": "Whether article is featured"
      },
      "published": {
        "type": "boolean",
        "description": "Whether article is published"
      },
      "published_at": {
        "type": "string",
        "format": "date-time",
        "description": "Publication timestamp"
      },
      "created_at": {
        "type": "string",
        "format": "date-time",
        "description": "Creation timestamp"
      },
      "updated_at": {
        "type": "string",
        "format": "date-time",
        "description": "Last update timestamp"
      },
      "author_username": {
        "type": "string",
        "description": "Author username (joined data)"
      }
    },
    "required": ["id", "title", "content", "author_id"]
  },
  "ServerInfo": {
    "type": "object",
    "description": "Game server information",
    "properties": {
      "id": {
        "type": "integer",
        "description": "Server ID"
      },
      "name": {
        "type": "string",
        "description": "Server name"
      },
      "host": {
        "type": "string",
        "description": "Server host address"
      },
      "port": {
        "type": "integer",
        "description": "Server port"
      },
      "status": {
        "type": "string",
        "enum": ["online", "offline", "maintenance"],
        "description": "Current server status"
      },
      "players_online": {
        "type": "integer",
        "description": "Number of players currently online"
      },
      "max_players": {
        "type": "integer",
        "description": "Maximum player capacity"
      },
      "uptime": {
        "type": "integer",
        "description": "Server uptime in seconds"
      },
      "last_check": {
        "type": "string",
        "format": "date-time",
        "description": "Last status check timestamp"
      },
      "version": {
        "type": "string",
        "description": "Server version"
      },
      "rates": {
        "type": "object",
        "properties": {
          "exp": {
            "type": "number",
            "description": "Experience rate multiplier"
          },
          "sp": {
            "type": "number",
            "description": "Skill point rate multiplier"
          },
          "gold": {
            "type": "number",
            "description": "Gold drop rate multiplier"
          },
          "item": {
            "type": "number",
            "description": "Item drop rate multiplier"
          }
        }
      }
    },
    "required": ["id", "name", "status"]
  },
  "Download": {
    "type": "object",
    "description": "Game client download",
    "properties": {
      "id": {
        "type": "integer",
        "description": "Download ID"
      },
      "name": {
        "type": "string",
        "description": "Download name/title"
      },
      "description": {
        "type": "string",
        "description": "Download description"
      },
      "file_url": {
        "type": "string",
        "description": "Download file URL"
      },
      "file_size": {
        "type": "integer",
        "description": "File size in bytes"
      },
      "version": {
        "type": "string",
        "description": "File version"
      },
      "category": {
        "type": "string",
        "enum": ["client", "patch", "tool", "other"],
        "description": "Download category"
      },
      "download_count": {
        "type": "integer",
        "description": "Number of downloads"
      },
      "created_at": {
        "type": "string",
        "format": "date-time",
        "description": "Creation timestamp"
      },
      "updated_at": {
        "type": "string",
        "format": "date-time",
        "description": "Last update timestamp"
      }
    },
    "required": ["id", "name", "file_url", "category"]
  },
  "CmsSettings": {
    "type": "object",
    "description": "CMS configuration settings",
    "properties": {
      "site_name": {
        "type": "string",
        "description": "Website name"
      },
      "site_description": {
        "type": "string",
        "description": "Website description"
      },
      "maintenance_mode": {
        "type": "boolean",
        "description": "Whether site is in maintenance mode"
      },
      "registration_enabled": {
        "type": "boolean",
        "description": "Whether user registration is enabled"
      },
      "max_accounts_per_ip": {
        "type": "integer",
        "description": "Maximum accounts allowed per IP"
      },
      "email_verification": {
        "type": "boolean",
        "description": "Whether email verification is required"
      },
      "captcha_enabled": {
        "type": "boolean",
        "description": "Whether CAPTCHA is enabled"
      },
      "auto_account_creation": {
        "type": "boolean",
        "description": "Whether accounts are auto-created in game DB"
      }
    }
  }
}
