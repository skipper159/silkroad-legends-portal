{
  "User": {
    "type": "object",
    "description": "User account information",
    "properties": {
      "StrUserID": {
        "type": "string",
        "description": "Unique user identifier"
      },
      "StrEmail": {
        "type": "string",
        "format": "email",
        "description": "User email address"
      },
      "JID": {
        "type": "integer",
        "description": "User JID"
      },
      "RegDate": {
        "type": "string",
        "format": "date-time",
        "description": "Registration date"
      },
      "LastLogin": {
        "type": "string",
        "format": "date-time",
        "description": "Last login timestamp"
      },
      "isActive": {
        "type": "boolean",
        "description": "Account active status"
      },
      "isBanned": {
        "type": "boolean",
        "description": "Account banned status"
      },
      "SilkOwn": {
        "type": "integer",
        "description": "Silk points owned"
      },
      "role": {
        "type": "string",
        "enum": ["user", "gm", "admin"],
        "description": "User role/permission level"
      }
    },
    "required": ["StrUserID", "StrEmail", "JID"]
  },
  "LoginRequest": {
    "type": "object",
    "description": "User login credentials",
    "properties": {
      "username": {
        "type": "string",
        "minLength": 3,
        "maxLength": 50,
        "description": "Username or email"
      },
      "password": {
        "type": "string",
        "minLength": 6,
        "description": "User password"
      },
      "remember": {
        "type": "boolean",
        "default": false,
        "description": "Remember login session"
      }
    },
    "required": ["username", "password"]
  },
  "LoginResponse": {
    "type": "object",
    "description": "Login response data",
    "properties": {
      "token": {
        "type": "string",
        "description": "JWT authentication token"
      },
      "user": {
        "$ref": "#/components/schemas/User"
      },
      "expires_in": {
        "type": "integer",
        "description": "Token expiration time in seconds"
      }
    },
    "required": ["token", "user"]
  },
  "RegisterRequest": {
    "type": "object",
    "description": "User registration data",
    "properties": {
      "username": {
        "type": "string",
        "minLength": 3,
        "maxLength": 50,
        "pattern": "^[a-zA-Z0-9_]+$",
        "description": "Unique username"
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "Valid email address"
      },
      "password": {
        "type": "string",
        "minLength": 6,
        "description": "Account password"
      },
      "password_confirmation": {
        "type": "string",
        "description": "Password confirmation"
      },
      "referral_code": {
        "type": "string",
        "description": "Optional referral code"
      },
      "terms_accepted": {
        "type": "boolean",
        "description": "Terms and conditions acceptance"
      }
    },
    "required": [
      "username",
      "email",
      "password",
      "password_confirmation",
      "terms_accepted"
    ]
  },
  "PasswordResetRequest": {
    "type": "object",
    "description": "Password reset request",
    "properties": {
      "email": {
        "type": "string",
        "format": "email",
        "description": "Email address for password reset"
      }
    },
    "required": ["email"]
  }
}
