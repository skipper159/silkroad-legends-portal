{
  "/api/ranking/honor": {
    "get": {
      "summary": "Get honor rankings",
      "description": "Retrieves ranked list of players by honor points and Hwan levels",
      "tags": ["Rankings"],
      "parameters": [
        {
          "name": "page",
          "in": "query",
          "schema": {
            "type": "integer",
            "default": 1,
            "minimum": 1
          },
          "description": "Page number for PaginationInfo"
        },
        {
          "name": "limit",
          "in": "query",
          "schema": {
            "type": "integer",
            "default": 10,
            "minimum": 1,
            "maximum": 100
          },
          "description": "Number of entries per page"
        },
        {
          "name": "race",
          "in": "query",
          "schema": {
            "type": "string",
            "enum": ["Chinese", "European"]
          },
          "description": "Filter by character race"
        },
        {
          "name": "minHonor",
          "in": "query",
          "schema": {
            "type": "integer",
            "minimum": 0
          },
          "description": "Minimum honor points threshold"
        }
      ],
      "responses": {
        "200": {
          "description": "Honor rankings retrieved successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": {
                    "type": "boolean",
                    "example": true
                  },
                  "data": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/HonorRanking"
                    }
                  },
                  "PaginationInfo": {
                    "$ref": "#/components/schemas/PaginationInfo"
                  },
                  "summary": {
                    "type": "object",
                    "properties": {
                      "totalHonorPoints": {
                        "type": "integer",
                        "description": "Total honor points across all players"
                      },
                      "averageHonor": {
                        "type": "number",
                        "description": "Average honor points"
                      },
                      "topHonorPlayer": {
                        "type": "string",
                        "description": "Name of top honor player"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "500": {
          "description": "Internal server error"
        }
      }
    }
  },
