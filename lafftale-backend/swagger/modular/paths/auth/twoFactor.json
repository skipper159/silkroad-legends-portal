{
  "status": {
    "get": {
      "summary": "Get 2FA Status",
      "description": "Check if Two-Factor Authentication is enabled for the current user",
      "tags": ["Two-Factor Authentication"],
      "security": [{ "bearerAuth": [] }],
      "responses": {
        "200": {
          "description": "2FA status retrieved successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "description": "Whether 2FA is enabled for the user"
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized - Invalid or missing token"
        },
        "404": {
          "description": "User not found"
        }
      }
    }
  },
  "setup": {
    "post": {
      "summary": "Setup 2FA",
      "description": "Generate a TOTP secret and QR code for setting up 2FA",
      "tags": ["Two-Factor Authentication"],
      "security": [{ "bearerAuth": [] }],
      "responses": {
        "200": {
          "description": "2FA setup data generated successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "secret": {
                    "type": "string",
                    "description": "TOTP secret for manual entry"
                  },
                  "qrCode": {
                    "type": "string",
                    "description": "QR code as data URL for scanning"
                  },
                  "otpauthUrl": {
                    "type": "string",
                    "description": "OTPAuth URL for authenticator apps"
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "2FA is already enabled"
        },
        "401": {
          "description": "Unauthorized"
        }
      }
    }
  },
  "verify": {
    "post": {
      "summary": "Verify and Enable 2FA",
      "description": "Verify a TOTP code and enable 2FA for the user",
      "tags": ["Two-Factor Authentication"],
      "security": [{ "bearerAuth": [] }],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["code"],
              "properties": {
                "code": {
                  "type": "string",
                  "description": "6-digit TOTP verification code",
                  "example": "123456"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "2FA enabled successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "message": { "type": "string" }
                }
              }
            }
          }
        },
        "400": {
          "description": "Invalid code or 2FA already enabled"
        },
        "401": {
          "description": "Unauthorized"
        }
      }
    }
  },
  "disable": {
    "post": {
      "summary": "Disable 2FA",
      "description": "Disable Two-Factor Authentication (requires password confirmation)",
      "tags": ["Two-Factor Authentication"],
      "security": [{ "bearerAuth": [] }],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["password"],
              "properties": {
                "password": {
                  "type": "string",
                  "description": "Current account password for verification"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "2FA disabled successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "message": { "type": "string" }
                }
              }
            }
          }
        },
        "400": {
          "description": "2FA is not enabled"
        },
        "403": {
          "description": "Invalid password"
        }
      }
    }
  },
  "login": {
    "post": {
      "summary": "2FA Login Verification",
      "description": "Complete login by verifying 2FA code (called after password login returns requires2FA)",
      "tags": ["Two-Factor Authentication"],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["tempToken", "code"],
              "properties": {
                "tempToken": {
                  "type": "string",
                  "description": "Temporary token received from login endpoint"
                },
                "code": {
                  "type": "string",
                  "description": "6-digit TOTP code from authenticator app",
                  "example": "123456"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "2FA verification successful, returns full JWT token",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "description": "Full JWT authentication token"
                  },
                  "user": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "username": { "type": "string" },
                      "email": { "type": "string" },
                      "role": { "type": "string" },
                      "isAdmin": { "type": "boolean" }
                    }
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "Invalid 2FA code or expired temp token"
        }
      }
    }
  },
  "adminReset": {
    "post": {
      "summary": "Admin Reset User 2FA",
      "description": "Reset 2FA for a user (admin only, for support cases)",
      "tags": ["Two-Factor Authentication", "Admin"],
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" },
          "description": "User ID to reset 2FA for"
        }
      ],
      "responses": {
        "200": {
          "description": "2FA reset successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "success": { "type": "boolean" },
                  "message": { "type": "string" }
                }
              }
            }
          }
        },
        "400": {
          "description": "User does not have 2FA enabled"
        },
        "403": {
          "description": "Admin access required"
        },
        "404": {
          "description": "User not found"
        }
      }
    }
  }
}
