{
  "/api/admin_tickets/tickets": {
    "get": {
      "tags": ["Admin - Tickets"],
      "summary": "Get all support tickets",
      "description": "Retrieve all support tickets for admin management",
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "name": "status",
          "in": "query",
          "schema": {
            "type": "string",
            "enum": ["all", "open", "in_progress", "resolved", "closed"]
          },
          "description": "Filter by status"
        },
        {
          "name": "priority",
          "in": "query",
          "schema": {
            "type": "string",
            "enum": ["all", "low", "medium", "high", "urgent"]
          },
          "description": "Filter by priority"
        },
        {
          "name": "assigned_to",
          "in": "query",
          "schema": { "type": "integer" },
          "description": "Filter by assigned staff member"
        },
        {
          "name": "page",
          "in": "query",
          "schema": { "type": "integer", "default": 1 }
        },
        {
          "name": "limit",
          "in": "query",
          "schema": { "type": "integer", "default": 20 }
        }
      ],
      "responses": {
        "200": {
          "description": "Tickets retrieved successfully",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  { "$ref": "#/components/schemas/SuccessResponse" },
                  {
                    "type": "object",
                    "properties": {
                      "data": {
                        "type": "object",
                        "properties": {
                          "tickets": {
                            "type": "array",
                            "items": { "$ref": "#/components/schemas/Ticket" }
                          },
                          "pagination": {
                            "$ref": "#/components/schemas/PaginationInfo"
                          },
                          "stats": {
                            "$ref": "#/components/schemas/TicketStats"
                          }
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        },
        "401": { "$ref": "#/components/responses/Unauthorized" },
        "403": { "$ref": "#/components/responses/Forbidden" }
      }
    }
  },
  "/api/admin_tickets/tickets/{id}/close": {
    "put": {
      "tags": ["Admin - Tickets"],
      "summary": "Close support ticket",
      "description": "Close a support ticket with resolution",
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" },
          "description": "Ticket ID"
        }
      ],
      "requestBody": {
        "required": false,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "resolution": {
                  "type": "string",
                  "description": "Resolution message"
                },
                "status": {
                  "type": "string",
                  "enum": ["resolved", "closed"],
                  "default": "closed",
                  "description": "Final ticket status"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Ticket closed successfully",
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/SuccessResponse" }
            }
          }
        },
        "400": { "$ref": "#/components/responses/BadRequest" },
        "401": { "$ref": "#/components/responses/Unauthorized" },
        "403": { "$ref": "#/components/responses/Forbidden" },
        "404": { "$ref": "#/components/responses/NotFound" }
      }
    }
  },
  "/api/admin_tickets/tickets/{id}/messages": {
    "get": {
      "tags": ["Admin - Tickets"],
      "summary": "Get ticket messages",
      "description": "Retrieve all messages for a specific ticket",
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" },
          "description": "Ticket ID"
        }
      ],
      "responses": {
        "200": {
          "description": "Ticket messages retrieved",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  { "$ref": "#/components/schemas/SuccessResponse" },
                  {
                    "type": "object",
                    "properties": {
                      "data": {
                        "type": "object",
                        "properties": {
                          "ticket": { "$ref": "#/components/schemas/Ticket" },
                          "messages": {
                            "type": "array",
                            "items": {
                              "$ref": "#/components/schemas/TicketReply"
                            }
                          }
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        },
        "401": { "$ref": "#/components/responses/Unauthorized" },
        "403": { "$ref": "#/components/responses/Forbidden" },
        "404": { "$ref": "#/components/responses/NotFound" }
      }
    }
  },
  "/api/admin_tickets/tickets/{id}/reply": {
    "post": {
      "tags": ["Admin - Tickets"],
      "summary": "Reply to support ticket",
      "description": "Add admin reply to support ticket",
      "security": [{ "bearerAuth": [] }],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" },
          "description": "Ticket ID"
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "minLength": 5,
                  "description": "Reply message content"
                },
                "changeStatus": {
                  "type": "string",
                  "enum": ["in_progress", "resolved", "closed"],
                  "description": "Update ticket status"
                },
                "assignTo": {
                  "type": "integer",
                  "description": "Assign ticket to staff member"
                },
                "isInternal": {
                  "type": "boolean",
                  "default": false,
                  "description": "Whether reply is internal (not visible to user)"
                }
              },
              "required": ["message"]
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Reply added successfully",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  { "$ref": "#/components/schemas/SuccessResponse" },
                  {
                    "type": "object",
                    "properties": {
                      "data": { "$ref": "#/components/schemas/TicketReply" }
                    }
                  }
                ]
              }
            }
          }
        },
        "400": { "$ref": "#/components/responses/BadRequest" },
        "401": { "$ref": "#/components/responses/Unauthorized" },
        "403": { "$ref": "#/components/responses/Forbidden" },
        "404": { "$ref": "#/components/responses/NotFound" }
      }
    }
  }
}
