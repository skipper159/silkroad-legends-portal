{
  "name": "lafftale-backend",
  "version": "1.0.0",
  "description": "Backend server for Silkroad Lafftale MMORPG",
  "main": "app.js",
  "scripts": {
    "start": "npm run swagger:build && node app.js",
    "dev": "npm run swagger:build && nodemon app.js",
    "dev:watch": "node dev-workflow.js",
    "dev:full": "concurrently \"node dev-workflow.js\" \"nodemon app.js\"",
    "test": "jest",
    "swagger:build": "node swagger/swagger_builder.js build",
    "swagger:validate": "node swagger/swagger_builder.js validate",
    "swagger:watch": "node swagger/swagger_builder.js watch",
    "docs:serve": "npm run swagger:build && node app.js",
    "client:generate": "node scripts/generate-api-client.js"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^9.1.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.3",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "redis": "^5.8.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mssql": "^9.1.8",
    "@types/node": "^24.5.2",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.1",
    "@types/swagger-ui-express": "^4.1.8",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prisma": "^6.8.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
