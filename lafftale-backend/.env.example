# ============================================
# SILKROAD LEGENDS BACKEND - Environment Config
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# ============================================

# ----------------------
# Server Configuration
# ----------------------

# Port the Express server runs on
PORT=3000

# Frontend URL for CORS and email links
FRONTEND_URL=http://localhost:5173

# ----------------------
# JWT Authentication
# ----------------------

# Secret key for signing JWT tokens (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# ----------------------
# Database Configuration
# ----------------------
# The backend connects to multiple MSSQL databases
# All databases can share credentials or have separate ones

# Fallback credentials (used if specific DB credentials not set)
DB_USER=sa
DB_PASSWORD=your-database-password
DB_SERVER=localhost

# VPlus / Web Database (SRO_CMS - main web application data)
DB_VPLUS_USER=sa
DB_VPLUS_PASSWORD=your-database-password
DB_VPLUS_SERVER=localhost
DB_VPLUS_DATABASE=SRO_CMS

# Game Database (game-related data)
DB_GAME_USER=sa
DB_GAME_PASSWORD=your-database-password
DB_GAME_SERVER=localhost
DB_GAME_DATABASE=SRO_VT_SHARD

# Account Database (SILKROAD_R_ACCOUNT - user accounts, TB_User)
DB_ACCOUNT_USER=sa
DB_ACCOUNT_PASSWORD=your-database-password
DB_ACCOUNT_SERVER=localhost
DB_ACCOUNT_DATABASE=SILKROAD_R_ACCOUNT

# Log Database (game logs)
DB_LOG_USER=sa
DB_LOG_PASSWORD=your-database-password
DB_LOG_SERVER=localhost
DB_LOG_DATABASE=SRO_VT_LOG

# Character Database (character data)
DB_CHAR_USER=sa
DB_CHAR_PASSWORD=your-database-password
DB_CHAR_SERVER=localhost
DB_CHAR_DATABASE=SRO_VT_SHARD

# ----------------------
# Email Configuration
# ----------------------

# SMTP server settings
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=noreply@example.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@example.com

# Email display name (optional)
EMAIL_NAME=Silkroad Legends

# Timeout settings (optional, in milliseconds)
EMAIL_CONNECTION_TIMEOUT=30000
EMAIL_GREETING_TIMEOUT=30000
EMAIL_SOCKET_TIMEOUT=60000

# TLS settings (optional)
EMAIL_TLS_REJECT_UNAUTHORIZED=true

# For testing emails (optional)
TEST_EMAIL=test@example.com

# ----------------------
# Image/Asset Configuration
# ----------------------

# Base path for images on the server
IMAGE_PATH_BASE=./public/image/Web

# Public URL for images in emails
IMAGE_BASE_URL=https://your-domain.com

# Whether to use absolute URLs in emails
USE_ABSOLUTE_URLS=true

# ----------------------
# Redis Cache (Optional)
# ----------------------

# Redis server configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ----------------------
# Payment Providers (Optional)
# ----------------------

# PayOp payment gateway
PAYOP_PUBLIC_KEY=your-payop-public-key
PAYOP_SECRET_KEY=your-payop-secret-key
PAYOP_MERCHANT_ID=your-payop-merchant-id

# NOWPayments crypto gateway
NOWPAYMENTS_API_KEY=your-nowpayments-api-key
NOWPAYMENTS_HMAC_SECRET=your-nowpayments-hmac-secret

# ============================================
# QUICK START GUIDE
# ============================================
#
# LOCAL DEVELOPMENT:
#   1. Copy this file: cp .env.example .env
#   2. Fill in your database credentials
#   3. Generate a JWT secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#   4. Start the server: npm run dev
#
# PRODUCTION:
#   - Keep .env on the server only (never in git)
#   - Use strong passwords and secrets
#   - Configure SSL/TLS for email
#   - Set proper CORS origins
#
# ============================================
